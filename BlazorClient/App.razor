@using BlazorClientMain
@using BlazorClientMain.Components
@using Microsoft.AspNetCore.Components.Authorization
@inject IAppConfiguratorService AppConfig


<MatThemeProvider Theme="@AppConfig.Theme">
    <MatToastContainer />
    <MatPortalHost></MatPortalHost>
    <BaseLoadingScreen></BaseLoadingScreen>
    <DataPreloader></DataPreloader>

    <Router AppAssembly="@typeof(Program).Assembly" AdditionalAssemblies="new[] { typeof(FrameworkUI).Assembly}">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(MainLayout)">
                <NotFounded404></NotFounded404>
            </LayoutView>
        </NotFound>
    </Router>
</MatThemeProvider>

